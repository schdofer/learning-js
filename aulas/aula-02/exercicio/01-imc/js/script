function calcularIMC (){
    //obter os elementos da tela - input
    const peso = document.getElementById('peso').value;
    const altura = document.getElementById('altura').value;

    if(!peso || !altura){
        document.getElementById('resultado').style.backgroundColor = 'red';
        resultado.innerHTML = `ERRO: Peso e/ou altura não informada!`;

        return;
    }

    //realizar calculo 
    let imc = (peso / (altura * altura) ).toFixed(2);

    // apresentar o resultado
    resultado.innerHTML = `RESULTADO: ${imc}`;
    document.getElementById('resultado').style.backgroundColor = 'green';

    if (imc < 18.6){
        diagnostico.innerHTML = `DIAGNÓSTICO - ALERTA:   Abaixo do peso.`;
        document.getElementById('diagnostico').style.backgroundColor = 'yellow';
    } 
    else if  (imc >= 18.5 &&  imc <= 24.9){
        diagnostico.innerHTML = `DIAGNÓSTICO: Peso Normal.`;
        document.getElementById('diagnostico').style.backgroundColor = 'darkseagreen';
    }
    else if (imc >= 25 && imc <= 29.9){
        diagnostico.innerHTML = `DIAGNÓSTICO ALERTA: Sobrepeso.`;
        document.getElementById('diagnostico').style.backgroundColor = 'yellow';
    }
    else if (imc >= 30 && imc <= 34.99){
        diagnostico.innerHTML = `DIAGNÓSTICO - PERIGO:  Obesidade Grau I.`;
        document.getElementById('diagnostico').style.backgroundColor = 'red';
    }
    else if (imc >= 35 && imc <= 39.99){
        diagnostico.innerHTML = `DIAGNÓSTICO - PERIGO:  Obesidade Grau II`;
        document.getElementById('diagnostico').style.backgroundColor = 'red';
    }
    else{
        diagnostico.innerHTML = `DIAGNÓSTICO - PERIGO:  Obesidade Morbida = Obesidade Grau III.`;
        document.getElementById('diagnostico').style.backgroundColor = 'red';
    }
}